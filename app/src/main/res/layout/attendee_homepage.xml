<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Welcome TextView -->
    <TextView
        android:id="@+id/welcome_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:gravity="center"
        android:padding="15sp"
        android:paddingStart="20dp"
        android:text="Your HomePage"
        android:textColor="#2D2D2D"
        android:textSize="30sp"
        android:textStyle="bold" />

    <!-- Profile button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="15dp">

        <ImageView
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_marginEnd="15dp"
            android:src="@drawable/profile_icon_black" />

        <Button
            android:id="@+id/edit_profile_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Profile"/>

    </LinearLayout>


    <!-- Button to show all events -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <!-- Button for quick scan and check-in -->
        <Button
            android:id="@+id/scan_and_attend_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Check-in" />

        <Button
            android:id="@+id/add_event_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Add an Event" />

        <Button
            android:id="@+id/show_all_events_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Find Events"
            android:textColorHighlight="#0B0A0A"
            android:textColorLink="#040303" />

        <!-- Button to sign up for an event -->
        <Button
            android:id="@+id/show_all_signed_up_events"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Signed Up Events" />

        <!-- Button to show old qr for old events -->

        <!-- Button to sign up attendees and my events -->
        <Button
            android:id="@+id/organizer_events"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="My Events" />

        <Switch
            android:id="@+id/geo_location_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/geo_location_label" />


    </LinearLayout>

</LinearLayout>
