<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar -->
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:text="Enter Event Details"
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        app:navigationIcon="?android:attr/homeAsUpIndicator"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Event Name EditText -->
    <EditText
        android:id="@+id/edit_text_event_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Event Name"
        android:inputType="text"
        android:maxLength="50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <!-- Date EditText -->
    <EditText
        android:id="@+id/edit_date_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:hint="Date"
        android:inputType="none"
        android:onClick="showDatePickerDialog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_text_event_text" />

    <!-- Venue EditText -->
    <EditText
        android:id="@+id/edit_venue_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Venue"
        android:inputType="text"
        android:maxLength="50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_date_text" />

    <!-- View Event Button -->
    <Button
        android:id="@+id/view_event_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Go to Event Page"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/upload_poster"
        app:layout_constraintTop_toBottomOf="@id/edit_venue_text" />
    <ImageView
        android:id="@+id/image_view_poster"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/upload_poster"
        android:scaleType="fitCenter"
        app:layout_constraintDimensionRatio="H,16:9"
        app:layout_constraintTop_toBottomOf="@id/edit_venue_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/upload_poster" />
    <!-- Upload Poster Button -->
    <Button
        android:id="@+id/upload_poster"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Upload Poster"
        app:layout_constraintStart_toEndOf="@id/view_event_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/view_event_button"
        app:layout_constraintBottom_toBottomOf="@id/view_event_button" />

    <!-- Delete Event Button -->
    <Button
        android:id="@+id/delete_event_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#F60404"
        android:text="Delete Event"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_event_button"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
