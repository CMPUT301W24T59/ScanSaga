<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- TextView for the welcome message -->
    <TextView
        android:id="@+id/welcome_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Welcome to the ScanSaga home page"
        android:background="#0BC6B5"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="40dp" />

    <!-- Button to show all events -->
    <Button
        android:id="@+id/show_all_events_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcome_textview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Show All Events" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_event_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/show_all_events_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:backgroundTint="#3F51B5"
        android:src="@android:drawable/ic_input_add"
        android:textColor="#FFFFFF" />

    <!-- Button to sign up for an event -->
    <Button
        android:id="@+id/sign_up_event_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_event_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Sign Up for an Event" />
    <Button
        android:id="@+id/scan_and_attend_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sign_up_event_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Quick Scan and Check-in " />

    <Button
        android:id="@+id/edit_profile_button"
        android:layout_width="150dp"
        android:layout_height="72dp"
        android:layout_below="@+id/scan_and_attend_button"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="215dp"
        android:layout_marginEnd="261dp"
        android:layout_marginBottom="36dp"
        android:clickable="true"
        android:contentDescription="My Profile"
        android:text="My Profile" />

    <!-- Rest of your layout content below -->
    <!-- Add your EditTexts, Button, etc. here -->

</RelativeLayout>
